{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "posts/**/index.html", "use": "@vercel/static" },
    { "src": "public/**/*.pdf", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.+\\.pdf)$", "dest": "/public/$1" },
    { "src": "/posts/(.*)",  "dest": "/posts/$1/index.html" },
    { "src": "/(.*)",        "dest": "/index.html" }
  ]
}